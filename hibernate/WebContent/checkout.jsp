<script src="js/simpleCart.min.js"> </script>
<!-- cart -->
</head>
<body>
	<!--header-->
	<%@ include file="head.jsp" %>
	<!--//header-->
	<!--cart-items-->
	<div class="cart-items">
		<div class="container">
			<h2>My Shopping Cart</h2>
			<c:forEach items="${cart.container }" var="cartlist">
			 <script>
				$(document).ready(function(c) {
					$('.close1').on('click', function(c){
						$(this).parent().fadeOut('slow', function(c){
							$(this).remove();
						});
						});	  
					});
			</script> 
			<!-- 购物车 -->
			<div class="cart-header">
				<div class="close1"> </div>
				<div class="cart-sec simpleCart_shelfItem">
					<div class="cart-item cyc">
						 <img src="${cartlist.value.cake.bigpic }" class="img-responsive" alt="">
					</div>
					<div class="cart-item-info">
						<h3><a href="#">${cartlist.value.cake.cakename } </a><span>count:${cartlist.value.count }</span></h3>
						<ul class="qty">
							<li><p>Min. order value:</p></li>
							<li><p>FREE delivery</p></li>
						</ul>
						<div class="delivery">
							<p>Service Charges : $10.00</p>
							<span>Delivered in 1-1:30 hours</span>
							<div class="clearfix"></div>
						</div>	
					</div>
					<div class="clearfix"></div>
				</div>
			</div>
			</c:forEach>
			<!-- 提交订单 -->
			<form action="checkoutController?carthashmap=${cart.container.value }" method="post">
				usermail:<input type="text" name="usermail"> <br/>
				addr:<input type="text" name="addr"> <br/>
				phone:<input type="text" name="phone"> <br/>
				status:<input type="text" name="status"> <br/>
				<input type="submit" class="item_add items" value="提交订单"/>
			</form>
			
		</div>
	</div>
	<!--//checkout-->	
	<!--footer-->
	<div class="footer">
		<div class="container">
			<div class="footer-grids">
				<div class="col-md-2 footer-grid">
					<h4>company</h4>
					<ul>
						<li><a href="products.jsp">products</a></li>
